<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="aplicacion.modelo.dominio.VentaProducto" optimistic-lock="version" polymorphism="implicit" 
         catalog="prueba" table="ventasProductos">
         <id name="codigo" type="integer">
            <column name="ven_pro_codigo" length="5"/>
            <generator class="identity"/>
        </id>
        
        <many-to-one name="venta" class="aplicacion.modelo.dominio.Venta"
                     fetch="join           
            <column name="ven_pro_venta" not-null="true"/>
        </many-to-one>
        
        <many-to-one name="producto" class="aplicacion.modelo.dominio.Producto"
                     fetch="join           
            <column name="ven_pro_producto" not-null="true"/>
        </many-to-one>
        
        <property name="cantidad" type="integer">
            <column name="ven_pro_cantidad" length="5" not-null="true"/>
        </property>
        
        <property name="entregado" type="yes_no">
            <column name="ven_pro_entregado" length="1" not-null="true"/>
        </property>
        
        <property name="importe" type="double">
            <column name="ven_pro_importe" length="10" not-null="true"/>
        </property>
    
  </class>
</hibernate-mapping>
